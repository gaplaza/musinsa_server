# ==========================================
# Nginx 설정 예시 (CloudFront 연동)
# ==========================================

upstream backend {
    server app:8080;
}

# HTTP 서버 (SSL 설치 전 임시 사용)
server {
    listen 80;
    server_name api.yourdomain.com;  # ← 여기를 실제 도메인으로 변경

    # Let's Encrypt 인증서 검증용
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # API 요청을 Spring Boot로 전달
    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS 설정 (CloudFront용)
        add_header 'Access-Control-Allow-Origin' 'https://d1234567890abc.cloudfront.net' always;  # ← CloudFront URL로 변경
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        
        # Preflight 요청 처리
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' 'https://d1234567890abc.cloudfront.net' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
            add_header 'Access-Control-Max-Age' 3600;
            add_header 'Content-Length' 0;
            return 204;
        }
    }
}

